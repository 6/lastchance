<!doctype html>
<html class="<%= controller_name %>-<%= action_name %>">
  <head>
    <meta charset='utf-8'>
    <meta name="robots" content="noindex,follow">
    <title>Last Chance Dance Love Making Machine</title>
    <%= stylesheet_link_tag("application", :media => "all") %>
    <%= javascript_include_tag("application") %>
    <%= csrf_meta_tags %>
    <%= yield :extra_head %>
  </head>
  <body>
    <% flash.each do |name, msg| %>
      <%= content_tag(:div, msg, :class => "alert flash flash_#{name}") %>
    <% end %>
    <div id="header">
      <h1>Last Chance Dance</h1>
    </div>
    <div id="main"><%= yield %></div>
  </body>
</html>
